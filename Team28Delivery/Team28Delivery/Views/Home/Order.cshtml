        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Delivery.State, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Delivery.State, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Delivery.Country, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
