        @Html.LabelFor(m => m.PackageDetails.RecieverName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PackageDetails.RecieverName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PackageDetails.PickupTime, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PackageDetails.PickupTime, new { @class = "form-control" })
        </div>
    </div>


