                @Html.EditorFor(model => model.Address.StreetAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address.StreetAddress, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
